{
  "Helper_SendTXTEmail": "select TXT_TVAL,TXT_VAL,TXT_BCC,TXT_TYPE from jsharmony.TXT where TXT_PROCESS='EMAIL' and TXT_ATTRIB=@TXT_ATTRIB",
  "HelperRender_getTXT": "select TXT_VAL from jsharmony.TXT where TXT_PROCESS=@TXT_PROCESS and TXT_ATTRIB=@TXT_ATTRIB",
  "create_ucod" : {
    "params": ["ID","SCHEMA"],
    "sql": [
      "create table %%%SCHEMA%%%ucod_%%%ID%%% (",
      "  ucod_id integer primary key autoincrement not null,",
      "  codseq integer,",
      "  codeval text unique not null,",
      "  codetxt text,",
      "  codecode text,",
      "  codetdt text,",
      "  codetcm text,",
      "  cod_etstmp text,",
      "  cod_eu text,",
      "  cod_mtstmp text,",
      "  cod_mu text,",
      "  cod_snotes text,",
      "  cod_notes text,",
      "  codeattrib text",
      ");",
      "create trigger insert_%%%SCHEMA%%%ucod_%%%ID%%% after insert on %%%SCHEMA%%%ucod_%%%ID%%%",
      "begin",
      "  update %%%SCHEMA%%%ucod_%%%ID%%% set ",
      "    cod_eu = (select context from jsharmony_meta limit 1),cod_etstmp=datetime('now','localtime'),",
      "    cod_mu = (select context from jsharmony_meta limit 1),cod_mtstmp=datetime('now','localtime')",
      "    where rowid = new.rowid\\;",
      "end;",
      "create trigger update_%%%SCHEMA%%%ucod_%%%ID%%% after update on %%%SCHEMA%%%ucod_%%%ID%%%",
      "begin",
      "  update %%%SCHEMA%%%ucod_%%%ID%%% set ",
      "    cod_mu = (select context from jsharmony_meta limit 1),cod_mtstmp=datetime('now','localtime') ",
      "    where rowid = new.rowid\\;",
      "end;"
    ]
  },
